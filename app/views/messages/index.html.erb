<div class= "container msg-wrapper">
<% if @over_ten %>
 <%= link_to 'Show Previous', '?m=all' %>
<% end %>
<div class="ui segment">
 <% @messages.each do |message| %>
  <% if message.body %>
   <% user = User.find(message.user_id) %>
   <div class="item">
    <div class="content">
      <div class="chip">
        <img src="<%= user.avatar.url %>" alt="Contact Person">
        <%= user.username %>
      </div>
      <div class="list">
       <div class="item">
         <%= message.body %>
      </div>
    </div>
   </div>
 </div>
 <% end %>
<% end %>
</div>
<br>
<%= form_for [@conversation, @message], html: {class: "ui reply form"} do |f| %>
 <div class="field">
   <%= f.label 'Type message' %>
   <%= f.text_area :body, class: "materialize-textarea" %>
 </div>
 <%= f.text_field :user_id, value: current_user.id, type: "hidden" %>
 <div>
   <%= f.submit "Add Reply", class: "btn waves-effect waves-light" %>
 </div>
<% end %>
</div>
