<div class= "container">
  <div class= "card convo-wrapper">
    <div class="ui segment">
     <h5>Conversations <i class= "material-icons icon-size-md">forum</i></h5>
     <br>
     <div class="ui list">
      <div class="item">
       <% @conversations.each do |conversation| %>
       <% if conversation.sender_id == current_user.id ||      conversation.recipient_id == current_user.id %>
        <% if conversation.sender_id == current_user.id %>
          <% recipient = User.find(conversation.recipient_id) %>
        <% else %>
          <% recipient = User.find(conversation.sender_id) %>
        <% end %>
        <div class="row">
          <div class= "col s2">
            <img src="<%= recipient.avatar.url %>" alt="" class="circle responsive-img">
          </div>
          <div class= "col s8">
            <%= link_to recipient.username,   conversation_messages_path(conversation), class: 'form-text'%>
          </div>
        </div>
        <br>
       <% end %>
      <% end %>
      </div>
     </div>
    </div>
  </div>
</div>
<div class= "login-top">
</div>
