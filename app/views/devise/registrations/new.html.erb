<div class= "login-page">
<div class="center login-top">
  <div class = "row">
    <div class = "col s12">
      <h2 class="center top-heading-sign">Sign up.</h2>
    </div>
  </div>
</div>

<div class = "container center">
  <div class = "row">
    <div class = "col s12 empty-space">
      <div class="form-wrapper z-depth-1">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <%= f.label :username, :class => 'form-text' %><br />
            <%= f.text_field :username, autofocus: true %>
          </div>

          <div class="field">
            <%= f.label :first_name, :class => 'form-text' %><br />
            <%= f.text_field :first_name, autofocus: true %>
          </div>

          <div class="field">
            <%= f.label 'Location (City, State, Country)', :class => 'form-text' %><br />
            <%= f.text_field :location, autofocus: true %>
          </div>

          <div class="field">
            <%= f.label :email, :class => 'form-text' %><br />
            <%= f.email_field :email, autofocus: true %>
          </div>

          <div class="field">
            <%= f.label :password, :class => 'form-text' %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, :class => 'form-text' %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up" %>
          </div>
        <% end %>
      </div>
      <div class = "bottom-links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
</div>
