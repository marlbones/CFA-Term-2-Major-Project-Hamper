
<div class="center login-top">
  <div class = "row">
    <div class = "col s12">
      <h2 class="center top-heading">Welcome to Hamper.</h2>
      <img src="http://res.cloudinary.com/dabq7kxo6/image/upload/v1493017591/openhandsicon_awbmmn.png" alt="">
    </div>
  </div>
</div>
<div class = "container center">
  <div class = "row">
    <div class = "col s12 empty-space">
      <div class="form-wrapper z-depth-1">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.label :email, :class => 'form-text' %><br />
              <%= f.email_field :email, autofocus: true %>
            </div>

            <div class="field">
              <%= f.label :password, :class => 'form-text' %><br />
              <%= f.password_field :password, autocomplete: "off" %>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, :class => 'form-text' %>
              </div>
            <% end -%>

            <div class="actions">
              <%= f.submit "Log in" %>
            </div>
          <% end %>
        </div>
        <div class = "bottom-links">
        <%= render "devise/shared/links" %>
        </div>
    </div>
  </div>
</div>
