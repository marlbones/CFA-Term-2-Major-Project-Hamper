<div class= "container">
  <p id="notice"><%= notice %></p>

  <div class= "row">
    <div class= "col s4">
      <img src="<%= @request.user.avatar.url %>" alt="" class="circle responsive-img">
    </div>
    <div class= "col s8">
      <p><%= link_to @request.user.username, @request.user %> <%= rating_for @request.user, 'buying', { readonly: true}%></p>
      <p class= "bold">"<%= @request.message %>"</p>
    </div>
  </div>

  <div class="row">
    <div class="col s12 m7">
      <div class="card">
        <div class="card-image">
          <img class= "resize-img" src="<%= @request.product.images[0].url %>">
        </div>
        <div class="card-content">
          <p><%= @request.product.title %></p>
          <p><%= @request.product.contents %></p>
        </div>
      </div>
    </div>
  </div>

  <% if correct_request?(@request)%>
    <%= link_to "Accept this request", accept_request_path(@request), method: :post %>
    <%= link_to "Reject this request", reject_request_path(@request), method: :post %>
  <% else %>
  <% end %>
</div>
