<h4>Admin Page</h4>
<p>Welcome admin. Please help make this site great.</p>

<h5>Products</h5>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>User</th>
      <th>Items</th>
      <th>Contents</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
        <tr>
          <td><%= product.title %></td>
          <td><%= link_to product.user.username, product.user %></td>
          <td><%= product.items %></td>
          <td><%= product.contents %></td>
          <td><%= product.description %></td>
          <td><%= link_to 'Show', product %></td>
          <td><%= link_to 'Edit', edit_product_path(product) %></td>
          <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
  </tbody>
</table>

<h5>Users</h5>
<% @users.each do |user| %>
  <%= link_to user.username, user %> |
  <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %>
  <br>
<% end %>

<h5>Requests</h5>
<% @requests.each do |request| %>
  <%= link_to request.user.username, request.user %> says
   "<%= request.message %>" to
   <%=request.product.user.username %> |
   <%= link_to 'Edit', edit_request_path(request) %> |
   <%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %>
  <br>
<% end %>

<h5>Reviews</h5>
<% @reviews.each do |review| %>
  <%= link_to review.user.username, review.user %> says
    <%= review.title %>,
   "<%= review.body %>" about
   <%=review.reviewee_id %> |
   <%= link_to 'Edit', edit_review_path(request) %> |
   <%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %>
  <br>
<% end %>
