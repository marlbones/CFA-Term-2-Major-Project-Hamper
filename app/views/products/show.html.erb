  <strong>Perishables:</strong>
  <%= @product.perishables %>
</p>

<p>
  <strong>Non perishables:</strong>
  <%= @product.non_perishables %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>


<% if @product.created_at < 1.day.ago%>
  <p>TEST!</p>
<% else %>
<% end %>

<%= link_to "Request Hamper", new_request_path(product_id: @product.id)%> |
